{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "next-i18next.config.js",
    "shared/components/Piechartt.tsx",
    "styles/colors.js",
    "shared/components/admin/AdminAsideMenu/index.tsx",
    "shared/components/admin/AdminAsideMenuResponsive/index.tsx",
    "shared/components/admin/AdminHeader/index.tsx",
    "shared/components/common/foody/index.tsx"
  ],
  "exclude": ["node_modules"]
}
